#include <bits/stdc++.h>
using namespace std;
using ll = long long;
int main() 
{
  int t;
  cin >> t;
  while(t--){
    int n;
    cin >> n;
    vector<int> a(n);
    for(int i = 0; i < n; i++) cin >> a[i];
    map<tuple<int,int,int>, int> cnt;
    ll ans = 0;
    for(int i = 0; i < n-2; i++){
      tuple<int,int,int> tp = make_tuple(a[i], a[i+1], a[i+2]);
      vector<tuple<int,int,int>> vec(3);
      vec[0] = make_tuple(0, a[i+1], a[i+2]);
      vec[1] = make_tuple(a[i], 0, a[i+2]);
      vec[2] = make_tuple(a[i], a[i+1], 0);
      for(auto it : vec){
        ans += cnt[it] - cnt[tp];
        cnt[it]++;
      }
      cnt[tp]++;
    }
    cout << ans << endl;
  }
}
